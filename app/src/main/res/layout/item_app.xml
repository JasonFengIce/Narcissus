<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:paddingBottom="@dimen/item_margin_bottom"
    android:paddingTop="@dimen/item_margin_bottom"

    >


    <ImageView
        android:id="@+id/item_app_image"
        android:layout_width="@dimen/item_app_search_width"
        android:layout_height="@dimen/item_app_search_width"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY" />


    <TextView
        android:id="@+id/item_app_title"
        android:layout_width="@dimen/content_fragment_item_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_app_image"
        android:layout_centerHorizontal="true"
        android:ellipsize="marquee"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textSize="@dimen/textSize_36sp" />

</RelativeLayout>