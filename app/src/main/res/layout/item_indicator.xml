<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:clickable="true"
              android:focusable="true"
              android:minHeight="@dimen/content_fragment_indicator_item_height"
              android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/content_fragment_indicator_item_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#a6a6a6"
        android:textSize="@dimen/textSize_30sp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_height"
        android:scaleType="fitXY"
        android:src="@drawable/indicator_type_divider"/>
</LinearLayout>