<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#405185"
    >

    <ImageView
        android:id="@+id/indicator_right_slide_menu"
        android:layout_width="@dimen/indicator_fragment_slide_width"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scaleType="fitXY"
        android:src="@drawable/selector_indicator_right_slide"
        android:visibility="gone"/>

    <FrameLayout
        android:id="@+id/top"
        android:layout_width="@dimen/voice_fragment_icon_bg_width"
        android:layout_height="@dimen/voice_fragment_icon_bg_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/voice_fragment_icon_margin_top"
        android:background="@drawable/voice_bg">

        <ImageView
            android:id="@+id/voice_progress"
            android:layout_width="@dimen/voice_fragment_icon_progress_width"
            android:layout_height="@dimen/voice_fragment_icon_progress_height"
            android:layout_gravity="center"
            android:src="@drawable/voice_progress"/>

        <ImageView
            android:id="@+id/voice_mic"
            android:layout_width="@dimen/voice_fragment_icon_mic_width"
            android:layout_height="@dimen/voice_fragment_icon_mic_height"
            android:layout_gravity="center"
            android:src="@drawable/voice_mic"/>
    </FrameLayout>

    <TextView
        android:id="@+id/record_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/record_tip_margin_top"
        android:text="@string/record_tip"
        android:textSize="@dimen/textSize_40sp"/>

    <ImageView
        android:id="@+id/divider_line"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/divider_line_height"
        android:layout_below="@id/record_tip"
        android:layout_marginLeft="@dimen/voice_fragment_divider_line_margin"
        android:layout_marginRight="@dimen/voice_fragment_divider_line_margin"
        android:layout_marginTop="@dimen/voice_fragment_divider_line_margin_top"
        android:scaleType="fitXY"
        android:src="@drawable/voice_fragment_divider_line"/>

    <FrameLayout
        android:id="@+id/search_tip_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/divider_line">
    </FrameLayout>


</RelativeLayout>