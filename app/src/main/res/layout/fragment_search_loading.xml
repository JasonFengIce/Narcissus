<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#405185"
                android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/loading_layout_width"
        android:layout_height="@dimen/loading_layout_height"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/progress_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/searching_progress"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/search_loading_text_img_marginTop"
            android:src="@drawable/loading_text_img"/>

    </LinearLayout>


</RelativeLayout>