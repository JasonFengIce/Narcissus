<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/textSize_30sp"/>

    <ImageView
        android:id="@+id/indicator_bg"
        android:layout_width="@dimen/film_star_indicator_bg_width"
        android:layout_height="@dimen/film_star_indicator_bg_height"
        android:background="@drawable/film_star_indicator_focus_bg"/>

</LinearLayout>
