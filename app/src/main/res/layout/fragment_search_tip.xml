<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/voice_tip_title_margin_top"
        android:text="@string/voice_tip_text"
        android:textSize="@dimen/textSize_40sp"/>

    <LinearLayout
        android:id="@+id/tip_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/voice_tip_margin_top"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
    </LinearLayout>

</LinearLayout>